{
  "name": "takvimi-per-evrope",
  "version": "1.0.0",
  "description": "Kohet e namazit per qytetet ne Evrope",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.takvimi.evrope",
    "productName": "Takvimi per Evrope",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "keywords": ["prayer", "times", "islamic", "takvim", "namaz"],
  "author": "Drilon",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
